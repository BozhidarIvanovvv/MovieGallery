@using MovieGalleryApp.Core.Models
@model IEnumerable<UserListVM>
@{
   ViewData["Title"] = "Manage Users";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">List of all application users!</h3>
               @* <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>*@
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Name</td>
                                <td>@user.Email</td>
                                <td>
                                    <a asp-area="admin" asp-controller="user" asp-action="roles" asp-route-id="@user.Id" class="btn btn-block btn-info btn-sm">Roles</a>
                                    <a asp-area="admin" asp-controller="user" asp-action="edit" asp-route-id="@user.Id" class="btn btn-block btn-warning btn-sm">Edit</a>
                                    <a asp-area="admin" asp-controller="user" asp-action="delete" asp-route-id="@user.Id" class="btn btn-block btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>