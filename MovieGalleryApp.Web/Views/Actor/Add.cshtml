@using MovieGalleryApp.Core.Models.Actor
@model ActorCastAddVM

<div class="row">
    <div class="col-4">
        <div class="edit-form">
            <div class="edit-title">Welcome, Movie Administrator!</div>
            <div class="edit-subtitle">Here you can add a new cast member!</div>
            <form id="add" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="edit-input-container ic1">
                    <label asp-for="FirstName" class="form-label edit-position"></label>
                    <input asp-for="FirstName" class="form-control edit-width" aria-required="true" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="input-container ic2">
                    <label asp-for="LastName" class="form-label edit-position"></label>
                    <input asp-for="LastName" class="form-control edit-width" aria-required="true" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                 <div class="input-container ic2">
                    <label asp-for="ImgUrl" class="form-label edit-position"></label>
                    <input asp-for="ImgUrl" class="form-control edit-width" aria-required="true" />
                    <span asp-validation-for="ImgUrl" class="text-danger"></span>
                </div>
                <button id="login-submit" type="submit" class="edit-submit">Submit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}